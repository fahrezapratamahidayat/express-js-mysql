{
  "env": {
    "DATABASE_URL": "@database_url"
  },
  "builds": [
    {
      "src": "app/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "app/configs/**",
          "app/controllers/**",
          "app/middlewares/**",
          "app/models/**",
          "app/routes/**",
          "app/services/**",
          "app/utils/**",
          "app/prisma/schema.prisma"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/app/index.ts"
    }
  ]
}
